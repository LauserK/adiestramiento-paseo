$text-color = rgb(161, 133, 0)
$paseo78    = rgb(255, 208, 0)

*	
	margin 0
	
body
	color $text-color
	font-family "Raleway", "Arial", sans-serif

a
	outline 0
	text-decoration none

img
	border none
	vertical-align bottom
	max-width 100%

.is_video
	background-color #0a8ecd

.MaterialApp
	padding-bottom 1rem
	
.ConceptList
	padding 0 5rem
	margin-bottom 1rem
	
	@media only screen and (min-width: 48em)
		padding 0 2rem
		
.Concept
	padding-bottom .5rem
	display flex
	-webkit-box-orient vertical
	-o-box-orient vertical
	-ms-flex-direction column
	flex-direction column
	-webkit-box-pack justify
	-o-box-pack justify
	-ms-box-pack justify
	justify-content space-between

	@media only screen and (min-width: 48em)
		padding-bottom 0

	&:last-child
		padding-bottom 0
	
	&-header
		-webkit-box-align center
		-o-box-align center
		-ms-box-align center
		align-items center
		display flex
		-webkit-box-pack justify
		-o-box-pack justify
		-ms-box-pack justify
		justify-content space-between
		margin-bottom calc(1rem - 2px)
		boder 1px dashed transparent
		
	&-left
		display flex
		-webkit-box-align center
		-o-box-align center
		-ms-box-align center
		align-items center
		
	&-title
		color $text-color
		font-size 1.125rem
		font-weight 700
		margin-right 1rem
		
	&-percentage
		color $text-color
		font-size 1rem
		font-style normal
		
.MaterialList
	width 100%
	
.Material
	border-radius .4rem 0 0 .4rem
	box-sizing border-box
	border 2px solid transparent
	display flex
	margin-bottom .7rem
	position relative
	z-index 1
	
	&-link
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		z-index 2

.MaterialType
	width 90px
	align-items center
	border-radius .25rem 0 0 .25rem
	color #fff
	display flex
	font-size 2rem
	flex-shrink 0
	justify-content center
	min-height 90px
	text-align center
	
	&.is-video
		background-color $paseo78
		
.MaterialContent
	
	&>div
		background-color #fff
		box-sizing border-box
		-webkit-box-orient vertical
		-o-box-orient vertical
		-ms-flex-direction column
		flex-direction column
		-webkit-box-pack justify
		-o-box-pack justify
		-ms-flex-pack justify
		justify-content space-between
		padding .75rem
		width 100%
		display flex
	
	.MaterialContent-title
		font-size 1rem
		-webkit-box-flex 1
		-o-box-flex 1
		box-flex 1
		ms-flex 1
		flex 1
		margin-bottom 0px
		
	&-date
		color $text-color
		text-transform capitalize
		
.MaterialMeta-status
	margin-left .5rem
		
.MaterialMeta-check
	cursor pointer
	position relative
	z-index 2

	&.is-seen
		color #7fc719

.MaterialContent-row2
	-webkit-box-pack justify
	-o-box-pack justify
	-ms-box-pack justify
	justify-content space-between
	-webkit-box-lines multiple
	-moz-box-lines multiple
	-o-box-lines multiple
	flex-wrap wrap
	-ms-box-lines multiple
	
.MaterialAuthor
	-webkit-box-align center
	-o-box-align center
	-ms-flex-align center
	align-items center
	display flex
	margin-bottom .75rem
	
	&-avatar
		height 20px
		flex-shrink 0
		margin-right .5rem
		width 20px
		
		img
			border-radius 50%
			height inherit
			width inherit
			
	&-name
		color #7b7b7f
		font-size 1rem
		font-weight 700
		margin-right .5rem

	
.header
	display flex
	align-items center
	justify-content space-between
	margin-bottom 2rem
	background-color $paseo78
	padding .2rem 1rem

	&__logo
		width 80px
		
	.menu
		
		&__item
			display inline-block
			margin-right .3rem
						
			a
				color $text-color
				box-sizing border-box
				font-weight 500
				font-size 1.3rem
				text-transform uppercase
				transition all .3s ease-in-out 0s 

				&:hover
					color darken(rgb(161, 133, 0), 0.5)					
			