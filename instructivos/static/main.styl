$text-color   = rgb(161, 133, 0)
$paseo78      = rgb(255, 208, 0)
$verde_oscuro = #598b11
$rojo         = #ff530f

*	
	margin 0
	
body
	background-color #f3f3f6
	color $text-color
	font-family "Raleway", "Arial", sans-serif
	text-rendering optimizeLegibility

a
	outline 0
	text-decoration none

img
	border none
	vertical-align bottom
	max-width 100%

/* CLASES DE UTILIDAD */

.container
	display flex
	flex-direction column
	justify-content center
	align-items center

.is_video
	background-color #0a8ecd

.row-reverse
	flex-direction row-reverse
	
.margin-r
	margin-right 1rem
	
.margin-r-05
	margin-right .5rem
	
.margin-t
	margin-top 1rem
	
.btn
	background-color #d3d3d3
	border none
	border-radius .4em
	box-sizing border-box
	color #fff
	cursor pointer
	display inline-block
	font-family Lato,sans-serif
	font-size .95em
	font-weight 700
	padding .6em .8em .8em
	text-decoration none
	-moz-user-select none
	-ms-user-select none
	-webkit-tap-highlight-color transparent
	-webkit-user-select none
	user-select none
	-webkit-transition .2s
	transition all .2s ease-in-out
	vertical-align middle
	box-shadow inset 0 -0.2em rgba(0,0,0,.3)
	white-space nowrap
	overflow hidden
	text-overflow ellipsis
	-webkit-appearance none
	-moz-appearance none
	appearance none
	outline 0
	
	&-corner-left-orange
		position relative
		font-size 16px
		
		&:before
			color #fff
			left 5px
			position absolute
			top 5px
			z-index 2
			
		&:after
			border-bottom 40px solid transparent
			border-left 40px solid $text-color
			content ""
			left 0
			position absolute
			top 0
			z-index 1
    
	&-green
		font-size 1.1rem
		background-color #7fc719
		
		&:hover
			background-color $verde_oscuro
			color #fff
			
	&-paseo
		font-size 1.1rem
		background-color $paseo78
		color $text-color
		transform scale(1.2)
		
		&:hover
			background-color darken($paseo78, 10%)
			
		&:active
			transform scale(1.1)
			
	&-danger
		font-size 1.1rem
		background-color darken(red, 20%)
		color white
		transform scale(1.2)
		
		&:hover
			background-color darken(red, 40%)
			
		&:active
			transform scale(1.1)
			
	&.input-submit
		margin-top 1rem
		
	&-right
		float right
		margin-right 1rem
		

.form-message
	margin-bottom 1.2rem
	text-align center
	
	&--span
		font-size 1.2rem
		font-weight bold
		color $rojo

.input
	&-label	
		font-size 1.4rem

